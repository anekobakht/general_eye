@model general_cheshm.Models.mobile

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div id="content" style="position:relative;right:-3000px">
    <h4>مورد جدید</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="num_mobile" class="control-label"></label>
                    <input id="num_mobile" asp-for="num_mobile" class="form-control num_mobile" required/>
                    <span asp-validation-for="num_mobile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fname_mobile" class="control-label"></label>
                    <input type="text" pattern="[a-z]" id="fname_mobile" asp-for="fname_mobile" class="form-control" required/>
                    <span asp-validation-for="fname_mobile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lname_mobile" class="control-label"></label>
                    <input id="lname_mobile" asp-for="lname_mobile" class="form-control" />
                    <span asp-validation-for="lname_mobile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ثبت مورد جدید" class="btn btn-outline-success rounded-pill" onclick="move_back()" required/>
                    <a onclick="move_back()" class="btn btn-outline-primary rounded-pill" asp-action="Index">بازگشت به لیست</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(() => {
            $("#content").animate({ right: "0" });
            $(window).scrollTop($("#back").offset().top);
        });
    </script>
    <script>
        $("#num_mobile").inputmask("09999999999");
    </script>
    <script>
        function move_back() {
            $("#form").submit(function (e) {
                e.preventDefault();
            });
            if (span.show() != true) {
                $("#content").animate({ right: "-3000" });
                $("#form").submit();
            }
        }
    </script>
}
